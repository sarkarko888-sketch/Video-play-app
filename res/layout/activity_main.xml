<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#121212">

    <EditText
        android:id="@+id/etVideoUrl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Direct Download/m3u8 Link"
        android:textColorHint="#888"
        android:textColor="#FFF"
        android:padding="16dp"
        android:background="#222"
        android:layout_margin="10dp"
        android:inputType="textUri"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="2">

        <Button
            android:id="@+id/btnPlay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="5dp"
            android:text="Play Video"
            android:backgroundTint="#03A9F4"/>

        <Button
            android:id="@+id/btnEmbed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="5dp"
            android:text="Create Embed"
            android:backgroundTint="#FF9800"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tvMetadata"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#00FF00"
        android:padding="10dp"
        android:textSize="12sp"
        android:text="Metadata will appear here..." />

    <!-- Yeh hai aapka Professional Playzone (Auto Settings Icon ke sath) -->
    <androidx.media3.ui.PlayerView
        android:id="@+id/playerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000"
        app:show_subtitle_button="true"
        app:use_controller="true" />

</LinearLayout>
